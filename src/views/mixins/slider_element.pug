mixin slider-element
  -
    var sliderImg = ["Layer1", "Layer3", "Layer4", "Layer5"];
  div#demowrap
      div#ninja-slider
        div.slider-inner
          ul
            each item in sliderImg
              li
                a(class="ns-img" href=`./images/slider/${item}.png`)

          div.fs-icon

      div#thumbnail-slider
        div.inner
          ul
            each item in sliderImg
              li
                a(class="thumb" href=`./images/slider/${item}.png`)
